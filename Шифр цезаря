# Шифр цезаря
while(True):

    алфавіт = {"англ": "abcdfghijklmnopqrstuvwxyz", "укр": "абвгґдеєжзиійїклмнопрстуфхцчшщьюя", "номер": "123456789" }

    зашифрувати = input("\n Повідомлення, яке потрібно зашифувати: ").lower() #lower() = робить малі з великих букв малі.
    зашифрований = ""

    for letter in зашифрувати:
        if letter in алфавіт["англ"]:
            position = алфавіт["англ"].find(letter) + 1
            if letter in алфавіт["англ"][-1]:
                зашифрований = зашифрований + алфавіт["англ"][0]

            else:
                зашифрований = зашифрований + алфавіт["англ"][position]
        elif letter in алфавіт["укр"]:
            position = алфавіт["укр"].find(letter) + 1
            if letter in алфавіт["укр"][-1]:
                зашифрований = зашифрований + алфавіт["укр"][0]

            else:
                зашифрований = зашифрований + алфавіт["укр"][position]
        elif letter in алфавіт["номер"]:
            position = алфавіт["номер"].find(letter) + 1
            if letter in алфавіт["номер"][-1]:
                зашифрований = зашифрований + алфавіт["номер"][0]
            else: #
                зашифрований = зашифрований + алфавіт["номер"][position]

        else:
            зашифрований = зашифрований + letter

    print(зашифрований)
