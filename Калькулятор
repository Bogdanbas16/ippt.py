while (True):
    число1 = int(input("\n Введіть перше число: "))
    число2 = int(input("\n Введіть дркге число: "))

    операція = input("\n Выберите операцию + - * /: ")

    if операція == "+":
        print(f"Результат додавання: {число1 + число2}")
    elif операція == "-":
        print(f"Результат віднімання : {число1 - число2}")
    elif операція == "*":
        print(f"Результат множення: {число1 * число2}")
    elif операція == "/":
        if число2 == 0:
            print("На ноль ділити неможна")
            quit()
        print(f"Результат ділення : {число1 / число2}")
    else:
        print("Выбрана неправельна  операція")
        
